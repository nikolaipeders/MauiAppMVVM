<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppMVVM"
    xmlns:view="clr-namespace:MauiAppMVVM.View"
    >

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.svg"
            ContentTemplate="{DataTemplate view:MainPage}"
            />

        <ShellContent 
            Title="All"
            Icon="menu.svg"
            ContentTemplate="{DataTemplate view:MainPage}"
            />

        <ShellContent 
            Title="Add"
            Icon="add.svg"
            ContentTemplate="{DataTemplate view:SecondPage}"
            />

        <ShellContent 
            Title="Favorites"
            Icon="favorite.svg"
            ContentTemplate="{DataTemplate view:SecondPage}"
            />

        <ShellContent 
            Title="Settings"
            Icon="settings.svg"
            ContentTemplate="{DataTemplate view:SecondPage}"
            />
    </TabBar>
</Shell>
